{
  "name": "API",
  "version": "1.2.1",
  "description": "",
  "author": "sdromacque",
  "main": "src/index.js",
  "private": false,
  "license": "MIT",
  "engines": {
    "node": ">=7.6",
    "yarn": "*"
  },
  "scripts": {
    "precommit": "yarn lint",
    "build": "babel src -d dist",
    "prestart": "yarn docs",
    "start": "cross-env NODE_ENV=production pm2 start ./src/index.js",
    "dev": "npm run build && nodemon dist/index.js",
    "lint": "eslint . --ext .js",
    "lint:fix": "yarn lint -- --fix",
    "lint:watch": "yarn lint -- --watch",
    "test": "cross-env NODE_ENV=test nyc --reporter=html --reporter=text mocha --timeout 20000 --recursive src/api/tests",
    "test:integration": "cross-env NODE_ENV=test mocha --timeout 20000 src/api/tests/integration",
    "opencoverage": "opn coverage/index.html",
    "validate": "yarn lint && yarn test",
    "postpublish": "git push --tags",
    "docs": "apidoc -i src -o docs && opn docs/index.html",
    "docker:start": "cross-env NODE_ENV=production pm2-docker start ./src/index.js",
    "docker:prod": "docker-compose -f docker-compose.yml -f docker-compose.prod.yml up",
    "docker:dev": "docker-compose -f docker-compose.yml -f docker-compose.dev.yml up",
    "docker:test": "docker-compose -f docker-compose.yml -f docker-compose.test.yml up --abort-on-container-exit"
  },
  "keywords": [],
  "dependencies": {
    "@babel/runtime": "^7.3.1",
    "axios": "0.18.0",
    "bcryptjs": "2.4.3",
    "bluebird": "3.5.1",
    "body-parser": "1.18.3",
    "boom": "7.2.0",
    "compression": "1.7.2",
    "cors": "2.8.4",
    "cross-env": "5.2.0",
    "dotenv-safe": "6.0.0",
    "express": "4.16.3",
    "express-validation": "1.0.2",
    "helmet": "3.12.1",
    "http-status": "1.2.0",
    "joi": "13.4.0",
    "jwt-simple": "0.5.1",
    "lodash": "4.17.10",
    "method-override": "3.0.0",
    "moment-timezone": "0.5.21",
    "mongoose": "5.2.3",
    "morgan": "1.9.0",
    "passport": "0.4.0",
    "passport-http-bearer": "1.0.1",
    "passport-jwt": "4.0.0",
    "pg": "^7.8.0",
    "pm2": "3.0.0",
    "turf": "3.0.14"
  },
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.2.2",
    "@babel/node": "^7.2.2",
    "@babel/plugin-transform-runtime": "^7.2.0",
    "@babel/preset-env": "^7.3.1",
    "apidoc": "0.17.6",
    "babel-cli": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "chai": "4.1.2",
    "chai-as-promised": "7.1.1",
    "eslint": "4.19.1",
    "eslint-config-airbnb-base": "12.1.0",
    "eslint-plugin-import": "2.12.0",
    "husky": "0.14.3",
    "istanbul": "0.4.5",
    "mocha": "3.3.0",
    "nodemon": "1.18.1",
    "nyc": "12.0.2",
    "opn-cli": "3.1.0",
    "sinon": "6.0.0",
    "sinon-chai": "3.2.0",
    "supertest": "3.1.0"
  }
}
